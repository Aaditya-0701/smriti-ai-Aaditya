generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @map("_id")
  username  String   @unique
  email     String   @unique
  mobile    String
  dob       String

  topics        Topic[]
  quizResults   QuizResult[]
}

model Topic {
  id        String   @id @default(uuid()) @map("_id")
  userId    String
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id])
  resources   Resource[]
  quizzes     Quiz[]
  quizResults QuizResult[]
}

enum ResourceType {
  ARTICLE
  VIDEO
  PDF
}

model Resource {
  id        String        @id @default(uuid()) @map("_id")
  topicId   String
  title     String
  type      ResourceType
  url       String
  summary   String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  topic     Topic         @relation(fields: [topicId], references: [id])
}

model Quiz {
  id            String   @id @default(uuid()) @map("_id")
  topicId       String
  question      String
  options       String[] // Array of options
  correctAnswer String
  explanation   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  topic         Topic    @relation(fields: [topicId], references: [id])
}

model QuizResult {
  id        String   @id @default(uuid()) @map("_id")
  userId    String
  topicId   String
  score     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
  topic     Topic    @relation(fields: [topicId], references: [id])
}
